---
export interface Props {
  label: string;
}

const { label } = Astro.props;
---

<div class="flex items-center justify-center w-full h-full">
  <button
    type="submit"
    class="text-white grow bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5"
  >
    {label}
  </button>
</div>
