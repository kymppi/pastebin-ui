---
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'button'> {
  label: string;
}

const { label, class: className, ...rest } = Astro.props;
---

<button
  type="submit"
  class:list={['btn btn-accent w-full h-full', className]}
  {...rest}
>
  {label}
</button>
