---
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'textarea'> {
  label: string;
  name: string;
}

const { label, name, placeholder, class: className, ...rest } = Astro.props;
---

<div class:list={['form-control h-full', className]}>
  <label class="label">
    <span class="label-text">{label}</span>
  </label>
  <textarea
    name={name}
    class="textarea textarea-secondary textarea-bordered h-full"
    placeholder={placeholder}
    {...rest}></textarea>
</div>
