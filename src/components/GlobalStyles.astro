  body {
    @apply bg-neutral;
  }
  a {
    --bg-height: 0.13em;
    background: linear-gradient(0deg, currentColor, currentColor) no-repeat
      right bottom / 0 var(--bg-height, 100%);
    transition: background-size 350ms;
    padding-bottom: calc(var(--bg-height) + 1px);
